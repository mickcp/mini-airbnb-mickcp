<% layout("/layouts/boilerplate")%>

<div class="row">
  <div class="col-8 offset-2">
    <br>
    <h4>Create new listings</h4>
    <form method="POST" action="/listings/" novalidate class="needs-validation" enctype="multipart/form-data">

      <div class="mb-2">
        <label for="title" class="form-label">Title :</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Add a catchy titile like : `Villa Vista: Your Ultimate Escape to Luxury and Tranquility`"
          class="form-control"
          required
        />

        <div class="invalid-feedback">
          Please enter a title 
        </div>
        
        <div class="valid-feedback">
          Title looks good!
        </div>

      </div>

      <div class="mb-2">
        <label for="description" class="form-label">Description :</label>
        <textarea
          type="text"
          name="listing[description]"
          placeholder="Enter disctription"
          rows="1"
          cols="10"
          class="form-control"
          required
        ></textarea>

        <div class="invalid-feedback">
          Please enter the description 
        </div>
      </div>

      <!-- <div class="mb-2">
        <label for="image" class="form-label">Image Link :</label>
        <input
          type="text"
          name="listing[image]"
          placeholder="Enter image Link or URL "
          class="form-control"
        />
      </div> -->

      <div class="mb-2">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          required
        />
       
      </div>







  
      <div class="row">
        <div class="mb-2 col-md-4">
          <label for="price" class="form-label">Price :</label>
          <input
           
            name="listing[price]"
            placeholder="Enter Price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
           please enter a valid prise
          </div>
         
        </div>
        <div class="mb-2 col-md-8">
          <label for="country" class="form-label">Country : </label>
          <input
            type="text"
            name="listing[country]"
            placeholder="Enter country"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
           please enter the country
           </div>
        </div>
      </div>
      <div >
        <label for="location" class="form-label">Location : </label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Enter location"
          class="form-control"
          required
        />
        <div class="invalid-feedback">
         please enter the location
         </div>
      </div>
    <br>

      <button class="addbutton">Add</button>
    </form>
    <br>
    <br>
  </div>
</div>
